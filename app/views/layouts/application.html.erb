<!DOCTYPE html>
<html>
  <head>
    <title>Customers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <nav class="ui menu">
  <%= link_to "Customers", customers_path, class: "item" %>
  <%= link_to "Add Customer", new_customer_path, class: "item" %>
  <div class="right menu">
    <% if current_user %>
      <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "item" %>
    <% else %>
      <%= link_to "Register", new_user_registration_path, class: "item" %>
      <%= link_to "Login", new_user_session_path, class: "item" %>
    <% end %>
  </div>
</nav>
<div class ='ui container'>
    <%= yield %>
  </div>
  </body>
</html>
